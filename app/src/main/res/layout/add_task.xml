<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/textView"
    android:layout_height="80dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskFolderName"
        android:layout_marginStart="14dp"
        android:text="folder name"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskhere"
        android:layout_marginStart="14dp"
        android:text="task created"
        android:layout_marginTop="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/baseline_alarm_on_24"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/timeronTask"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_marginStart="4dp"
            android:textSize="12sp"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/baseline_label_24"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/priorityLabel"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_marginStart="4dp"
            android:textSize="12sp"/>


    </LinearLayout>
    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/deleteTask"
        android:src="@drawable/baseline_delete_24"/>

</androidx.cardview.widget.CardView>