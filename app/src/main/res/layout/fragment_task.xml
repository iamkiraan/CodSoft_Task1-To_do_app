<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".appBarFragments.TaskFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Tasks"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginTop="60dp" />
   <androidx.cardview.widget.CardView
       android:id="@+id/addTask"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:layout_marginTop="80dp"
       app:cardCornerRadius="10dp"
       android:layout_marginStart="30dp"
       android:layout_marginEnd="30dp"
       app:cardBackgroundColor="@color/steel_blue">
       <ImageView
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@drawable/baseline_add_box_24"
           android:layout_gravity="center_vertical"
           android:layout_marginStart="10dp"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Add Task"
           android:textColor="@color/white"
           android:textSize="20sp"
           android:layout_gravity="center_vertical"
           android:layout_marginStart="60dp"/>
   </androidx.cardview.widget.CardView>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Lists"
         android:layout_marginTop="145dp"
         android:layout_marginStart="30dp"
         android:textStyle="bold"
         android:textColor="@color/black"
         android:textSize="16sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/daily"
            android:elevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Planner"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="15dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:background="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="80dp"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="% 60"
                android:layout_gravity="end"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="50dp"

                android:textColor="@color/black"
                android:textSize="10sp"/>

            <ImageView
                android:id="@+id/dailyWork"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/weekly"
            android:elevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Planner"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="15dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:background="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="80dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="% 60"
                android:layout_gravity="end"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="50dp"

                android:textColor="@color/black"
                android:textSize="10sp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/monthly"
            android:elevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly Planner"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="15dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:background="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="80dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="% 60"
                android:layout_gravity="end"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="50dp"

                android:textColor="@color/black"
                android:textSize="10sp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/yearly"
            android:elevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yearly Planner"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="15dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_marginStart="20dp"
                    android:background="@color/white"
                    android:layout_marginEnd="80dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="% 60"
                android:layout_gravity="end"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="50dp"
                android:textColor="@color/black"
                android:textSize="10sp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tasks"
        android:textSize="16sp"
        android:textStyle="bold"

        android:layout_marginTop="460dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"/>
    <Spinner
        android:id="@+id/taskSpinner"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="500dp"
        android:contextClickable="true"
        android:background="@drawable/upcomming_one"
        android:layout_marginStart="30dp"/>



       



</FrameLayout>