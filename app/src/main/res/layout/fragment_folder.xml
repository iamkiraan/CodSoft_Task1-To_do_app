<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".appBarFragments.FolderFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"/>


    <LinearLayout
        android:id="@+id/addFolderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:id="@+id/createCard"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/folder_color"
            app:cardCornerRadius="12dp"
            android:background="@drawable/folder_create">
            <ImageButton
                android:id="@+id/AddFolders"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:background="@drawable/baseline_add_24"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Folder"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:textColor="@color/blue"
                android:textSize="14sp"/>



        </androidx.cardview.widget.CardView>

    </LinearLayout>




</FrameLayout>